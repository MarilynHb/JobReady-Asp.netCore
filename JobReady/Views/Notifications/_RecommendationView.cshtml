@model IEnumerable<RecommendationDetails>;

    @if(Model.All(t=>t.IsStudent)){
    <table class="table table-hover ">
        <thead class="light-blue-thead">
            <tr>
                <th scope="col" width="40%">Sent On</th>
                <th scope="col">Instructor</th>
                <th scope="col">Status</th>
                <th scope="col">Replied On</th>
            </tr>
        </thead>
        <tbody class="table-group-divider table-light">
            @foreach(var recommendation in Model){
            <tr>
                <th scope="row">@recommendation.RequestDate?.ToString("ddd dd MMMM yyyy")</th>
                <td>@recommendation.Instructor.FullName</td>
                    <td>@recommendation.Status</td>
                    <td>@recommendation.ResponseDate?.ToString("ddd dd MMMM yyyy")</td>
            </tr>
            }
        </tbody>
    </table>
}else{
    <table class="table table-hover">
        <thead class="light-blue-thead">
            <tr>
                <th scope="col" width="40%">Requested On</th>
                <th scope="col">Requested By</th>
                <th scope="col">Response</th>
            </tr>
        </thead>
        <tbody class="table-group-divider  table-light">
            @foreach (var recommendation in Model)
            {
                <tr>
                    <th scope="row">@recommendation.RequestDate?.ToString("ddd dd MMMM yyyy")</th>
                    <td>@recommendation.Student.FullName</td>
                    <td>
                        <div class="d-flex flex-row gap-3">
                            <button type="button" class="btn btn-outline-danger  d-flex flex-row align-items-center text-center">&times;</button>
                            <button type="button" class="btn btn-outline-success d-flex flex-row align-items-center justify-content-center">
                                <svg width="11" height="8" viewBox="0 0 11 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M1 3.82996L3.83 6.65996L9.5 1" stroke="#8FFD39" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @foreach(var recommendation in Model)
    {
    <div class="modal fade" id="replyModal-@recommendation.Id" tabindex="-1" aria-labelledby="replyModal" aria-hidden="true">
        <button type="button" class="btn close" data-bs-dismiss="modal">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 22C17.5 22 22 17.5 22 12C22 6.5 17.5 2 12 2C6.5 2 2 6.5 2 12C2 17.5 6.5 22 12 22Z" stroke="#F4FAFF" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M9.16998 14.83L14.83 9.17004" stroke="#F4FAFF" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M14.83 14.83L9.16998 9.17004" stroke="#F4FAFF" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
        </button>
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="modal-title">Write Recommendation</h1>
                </div>
                <form asp-controller="Notifications" asp-action="AcceptRecommendation" method="post">
                    <div class="modal-body">
                        <textarea asp-for="@recommendation.InstructorReply" class="letter" placeholder="Reply Here..."></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" role="button" class="btn btn-primary rounded-pill">Send Letter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    }
}