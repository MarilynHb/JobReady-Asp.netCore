@model JobReady.LoginUserDetails
@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JobReady</title>
    <link rel="icon" href="~/favicon.svg" type="image/x-icon">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JobReady.styles.css" asp-append-version="true" />
    <title>@ViewData["Title"] - JobReady</title>
    <script type="text/javascript">
        function preventBack() { window.history.forward(); }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };
    </script>
</head>
<body>
    <div class="d-flex flex-lg-row flex-column vw-100 vh-100">
        <div class="d-flex flex-column w-50 vh-100 justify-content-center align-items-center justify-content-center mobile-flex-width">
            <div class="d-flex flex-column w-100 h-100 align-items-center justify-content-center">
               @Html.AntiForgeryToken()
                <form class="d-flex flex-column p-5 gap-4 w-100" asp-controller="Login" asp-action="Login" method="post">
                    <input class="custom-design" asp-for="Username" type="text" id="username" name="username" placeholder="Username" required/>
                    <div class="d-flex flex-row pswrdicn align-items-center justify-content-between custom-div-design">
                            <input asp-for="Password" type="password" class="w-100" id="password" name="password" placeholder="Password" required/>
                            <img src="~/icons/eye.svg" alt="eye" class="eye m-3">
                    </div>

                    <input class="submitbtn" type="submit" value="Log In">
                    <p class="register-text">Don't have an account? <a asp-controller="SignUp" asp-action="Index">Register</a></p>
                </form>
            </div>
        </div>
        <div class="d-flex flex-column justify-content-center align-items-center logo-side">
            <img src="~/assets/logo/whiteLogo.svg" alt="JobReady white Logo" class="img-resize" />
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/login.js"></script>
</body>
</html>
