
@model JobReady.PostDetails 
@if(Model.ImageId != null)
{
    
@*First Structure with image*@

<!-- Modal -->
<div class="modal w-100 fade" id="postModal-@Model.Id" tabindex="-1" aria-labelledby="postModalLabel" aria-hidden="true">
        <button type="button" class="btn close" data-bs-dismiss="modal">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 22C17.5 22 22 17.5 22 12C22 6.5 17.5 2 12 2C6.5 2 2 6.5 2 12C2 17.5 6.5 22 12 22Z" stroke="#F4FAFF" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M9.16998 14.83L14.83 9.17004" stroke="#F4FAFF" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M14.83 14.83L9.16998 9.17004" stroke="#F4FAFF" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
        </button>
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-body">
                <div class="grid-container d-grid h-100">
                    <div class="image-wrapper h-100">
                            <div class="d-flex flex-column align-content-center justify-content-center h-100">
                                <img src="@Url.Action("GetPostPicture", "Post", new {imageId = Model.ImageId})" class="image-post-modal" />
                        </div>
                    </div>
                    <div class="username-wrapper d-flex flex-column p-3 gap-3">
                        <div class="d-flex flex-row align-items-center w-100 gap-2">
                                <img src="@Url.Action("GetProfilePicture", "Profile",new {userId = Model.CreatedById})" class="image-modal-resize rounded-circle" />
                                <div class="d-flex flex-column gap-3">
                                    <div class="fullname-p-modal d-flex flex-row align-items-center gap-1">
                                        <p>@Model.CreatedBy.FullName</p>
                                        <span class="username-span-modal">&#8226; @@@Model.CreatedBy.Username</span>
                                       @* @if (Model.IsVerified == true)
                                        {
                                            <img src="~/icons/verify.svg" class="ms-1" />
                                        }*@
                                        </div>
                                    <p class="colorcolor-grayish-blue heading-post fw-lighter">@Model.CreatedBy.Headline</p>
                                </div>
                        </div>
                        <p class="fs-6">@Model.Content</p>
                    </div>
                    <div class="engagement-wrapper h-100 ps-3 py-3">
                        <div class="d-flex flex-column justify-content-between gap-2 h-100">
                            <div class="all-comments h-100 p-3">
                                <div class="comments-wrapper d-flex flex-column gap-3">
                                    <div class="user-comment d-flex flex-row align-items-center gap-2">
                                        <img src="~/assets/images/image-placeholder.png" class="user-comment-img" />
                                        <div class="d-flex flex-column">
                                            <p class="user-name">user1</p>
                                            <p class="the-comment">Exceptionall!!</p>
                                        </div>
                                        </div>
                                </div>
                            </div>
                            <div class="form-comment">
                                <form asp-controller="Post" asp-action="Comment" method="post" class="d-flex flex-row py-3 px-1">
                                    <input type="text" id="comment" placeholder="Give your input Santiago..." required/>
                                    <button class="send-btn"><img src="~/icons/send-1.svg" width="25px" class="send-button" /></button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}
else
{
@*Second Structure no image*@
