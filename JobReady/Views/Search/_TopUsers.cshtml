        case 1:
            <div class="d-flex flex-row align-item-center my-1 pill rounded-pill">
                <div class="d-flex flex-row align-items-center gap-3 first-pill-part p-2">
                    <img src="~/assets/images/image-placeholder.png" class="img-resize rounded-circle" />
                        <p>Santiago Valdarrama</p>
                </div>
                <div class="d-flex flex-row gap-2 second-pill-part align-items-center justify-content-center" style="--accent-color:#00B4D8;">
