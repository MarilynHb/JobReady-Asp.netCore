@{
    ViewData["Title"] = "Settings";
}

<link rel="stylesheet" href="~/css/settings.css" />

<div class="d-flex flex-column flex-wrap w-100 dark-main-bg vh-100 p-5 gap-5">
    <a class="d-flex flex-row w-100 align-items-center setting-item justify-content-between p-4 text-decoration-none text-black user-select-none" asp-controller="Profile" asp-action="Edit">
        <div class="d-flex flex-row gap-2">
            <img src="~/icons/user-edit.svg" />
            <p>Edit Profile</p>
        </div>
        <img src="~/icons/arrow-right-black.svg"/>
    </a>
    <div class="accordion h-auto setting-item" id="accordionExample">
        <div class="accordion-item mt-1">
            <h2 class="accordion-header">
                <button class="accordion-button d-flex flex-row align-items-center gap-2 p-4 user-select-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <img src="~/icons/lock.svg" />
                        <p>Change Password</p>
                </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <form asp-controller="Settings" asp-action="ChangePassword" method="post" class="d-flex flex-column gap-3">
                        <div class="form-group">
                            <label for="new-password" class="color-black">New Password:</label>
                            <input type="password" class="password" id="new-password" name="new-password" placeholder="Enter New Password">
                        </div>
                        <div class="form-group">
                            <label for="confirm-password" class="color-black">Confirm Password:</label>
                            <input type="password" class="password" id="confirm-password" name="confirm-password" placeholder="Confirm New Password">
                        </div>
                        <button type="submit" class="submit-btn btn-primary rounded-pill">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex flex-row w-100 align-items-center setting-item justify-content-between p-4 user-select-none pointer">
            <div class="d-flex flex-row gap-2">
                <img src="~/icons/lock-circle.svg"/>
                <p>Two-Factor Authentication</p>
            </div>
            <img src="~/icons/arrow-right-black.svg"/>
        </div>
   
    <div class="d-flex flex-row w-100 align-items-center setting-item justify-content-between p-4 user-select-none pointer">
        <div class="d-flex flex-row gap-2">
            <img src="~/icons/watch-status.svg" />
            <p>Statistics</p>
        </div>
        <img src="~/icons/arrow-right-black.svg" />
    </div>
    <div class="d-flex flex-row w-100 align-items-center setting-item justify-content-between p-4 user-select-none pointer">
        <div class="d-flex flex-row gap-2">
            <img src="~/icons/document-1.svg" />
            <p>Generate CV</p>
        </div>
        <img src="~/icons/arrow-right-black.svg"/>
    </div>
</div>